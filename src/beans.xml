<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	
	
	<bean id="studentController" class="test2a.StudentController">
		<constructor-arg ref="studentService"></constructor-arg>
	</bean>
	
	<bean id="studentService" class="test2a.StudentServiceImpl">
		<constructor-arg ref="studentDao"></constructor-arg>	
	</bean>
	
	<bean id="studentDao" class="test2a.StudentDaoImpl">
	</bean>
</beans>